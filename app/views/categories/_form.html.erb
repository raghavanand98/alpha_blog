<%= form_for(@category, :html => {class: "form-horizontal signup-form", role: "form"}) do |f| %>
      <div class="form-group">
      <strong><%= f.label :name %></strong>
      <%= f.text_field :name, :class => "form-control", placeholder: "Enter Category Name", autofocus:true %>
      <%= f.submit class: "btn btn-success", style: "margin-top:10px" %>
      </div>
    <% end %>
    <br>
    <%= link_to 'View All Articles', articles_path %>