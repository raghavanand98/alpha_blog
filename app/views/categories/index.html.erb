<div class = "container">
  <div class = "row">
    <div class = "col-md-6 col-md-offset-3 text-center">
      <h1 class= "text-center">Listing Categories</h1>
      <%= will_paginate %>
        <ul class = "listing">
        <% @categories.each do |category| %>
          <div class = "well text-center">
          <li><%= link_to "#{category.name}", category_path(category) %><br>
            <small>
              <% if logged_in? && current_user.admin? %>
                <%= link_to "Edit name", edit_category_path(category), style: "float:right" %><br>
              <% end %>
              <%= pluralize(category.articles.count, "article") %></small>
          </li>
          </div>
        <% end %>
      <%= will_paginate %>
      </ul>
    </div>
  </div>
</div>