<section>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="text-center">All Users</h1>
      <div class="paginate">
        <%= will_paginate %>
      </div>
      <% @users.each do |user| %>
        <div class= "well">
          <ul class="user-listing">
            <li>
              <%= link_to gravatar_for(user), user_path(user)%> 
            </li>
            <li class = "titles">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
            </li>
            <% if logged_in? && current_user.admin? %>
              <li>
                <%= link_to "Delete this User", user_path(user), method: :delete,
                            data: { confirm: "Are you sure you want to delete user and all articles associated" } %>
              </li>
            <% end %>
          </ul>
       </div>
      <% end %>
      <div class="paginate">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
</section>
