<h1>Edit Article <%= @article.id %></h1>

  <% if @article.errors.any? %>
  <h2> The Following Errors Prevented Creation</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  <% end %>
  
  <%= form_for @article do |f| %>
    <p><strong>
      <%= f.label :title %></strong> &nbsp&nbsp&nbsp&nbsp&nbsp
      <%= f.text_field :title %>
    </p>
    <p><strong>
      <%= f.label :description %></strong> 
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <%end %>
  
  <%= link_to 'Back to All Articles', articles_path %>

