<body style="background-color:#ccc">
<header style="background-color:#ccc; padding:0; margin:0; width:100%; height:100%;">
  <div style = "margin-left: 100px; margin-top:20px; color:black; font-size:25px; font-family:Papyrus;"><strong> Alpha Blog </div> </strong>
  <div class="links" style = "float:right; text-decoration:none; color:white; margin-right:100px; margin-top:-30px; text-align:center; font-size:20px;">
    <%= link_to 'Home', root_path %>
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    <%= link_to 'About', about_path %>
  </div>
</header>

<section style = "text-align:center; color:#3366cc; width=100%;">
  
  <% if @article.errors.any? %>
  <h2> The Following Errors Prevented Creation</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  <% end %>
  
  <%= form_for @article do |f| %>
    <p><strong>
      <%= f.label :title %></strong> &nbsp&nbsp&nbsp&nbsp&nbsp
      <%= f.text_field :title %>
    </p>
    <p><strong>
      <%= f.label :description %></strong> 
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <%end %>
</section>

<%= link_to 'Back to All Articles', articles_path %>

</body>

<style>
  .links a {
    text-decoration:none;
    color:green;
  }
  .links a:hover{
    color:black;
  }
  
</style>